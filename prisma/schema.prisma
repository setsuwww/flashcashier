datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}
model User {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  password    String
  role        Role     @default(USER)
  merchant    Merchant @relation(fields: [merchantId], references: [id])
  merchantId  String
  createdAt   DateTime @default(now())
}

model Merchant {
  id          String       @id @default(cuid())
  name        String
  subdomain   String       @unique
  plan        Plan         @default(FREE)
  users       User[]
  categories  Category[]
  products    Product[]
  customFields CustomField[]
  transactions Transaction[]
  createdAt   DateTime     @default(now())
}

model Category {
  id          String      @id @default(cuid())
  name        String
  merchant    Merchant    @relation(fields: [merchantId], references: [id])
  merchantId  String
  products    Product[]
  customFields CustomField[]
  createdAt   DateTime    @default(now())
}

model Product {
  id          String           @id @default(cuid())
  title       String
  price       Float
  description String?
  imageUrl    String?
  merchant    Merchant         @relation(fields: [merchantId], references: [id])
  merchantId  String
  category    Category?        @relation(fields: [categoryId], references: [id])
  categoryId  String?
  customData  ProductCustomData[]
  createdAt   DateTime         @default(now())
}

model CustomField {
  id          String      @id @default(cuid())
  name        String
  type        FieldType
  required    Boolean     @default(false)
  merchant    Merchant    @relation(fields: [merchantId], references: [id])
  merchantId  String
  category    Category?   @relation(fields: [categoryId], references: [id])
  categoryId  String?
  productData ProductCustomData[]
  createdAt   DateTime    @default(now())
}

model ProductCustomData {
  id           String      @id @default(cuid())
  product      Product     @relation(fields: [productId], references: [id])
  productId    String
  customField  CustomField @relation(fields: [customFieldId], references: [id])
  customFieldId String
  value        String
}

model Transaction {
  id          String      @id @default(cuid())
  merchant    Merchant    @relation(fields: [merchantId], references: [id])
  merchantId  String
  totalPrice  Float
  items       Json
  createdAt   DateTime    @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Plan {
  FREE
  BASIC
  PRO
}

enum FieldType {
  TEXT
  NUMBER
  SELECT
  DATE
}